@model Kursach.Application.Dtos.CarForCreationDto

<h2>Добавить новый автомобиль</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Brand">Марка</label>
        <input type="text" name="Brand" id="Brand" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Number">Номер</label>
        <input type="text" name="Number" id="Number" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ClientId">Клиент</label>
        <select name="ClientId" id="ClientId" class="form-control" required>
            <option value="">Выберите клиента</option>
            @foreach (var client in ViewBag.Clients as List<SelectListItem>)
            {
                <option value="@client.Value">@client.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>
