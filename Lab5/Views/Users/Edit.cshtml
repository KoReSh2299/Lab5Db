@model Kursach.Application.Dtos.UserForUpdateDto

<h2>Редактировать пользователя</h2>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Username">Имя пользователя</label>
        <input type="text" name="Username" id="Username" class="form-control" value="@Model.Username" required />
    </div>
    <div class="form-group">
        <label for="Password">Пароль</label>
        <input type="password" name="Password" id="Password" class="form-control" />
        <small class="form-text text-muted">Оставьте поле пустым, если не хотите менять пароль</small>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Подтверждение пароля</label>
        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" />
        <small class="form-text text-muted">Оставьте поле пустым, если не хотите менять пароль</small>
    </div>
    <div class="form-group">
        <label for="Role">Роль</label>
        <select name="Role" id="Role" class="form-control" required>
            <option value="@Model.Role" disabled>Выберите роль</option>
            @foreach (var role in ViewBag.Roles as List<string>)
            {
                <option value="@role"> @role</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>
